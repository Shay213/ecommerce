// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String        @id @default(uuid())
  title         String
  desc          String
  img1          String
  img2          String
  productType   ProductType   @default(normal) @map("product_type")
  price         Decimal
  isNew         Boolean       @default(false) @map("is_new")
  categories    Category[]
  subCategories SubCategory[]

  @@map("products")
}

model Category {
  id            String        @id @default(uuid())
  title         CategoryTitle @unique
  desc          String
  img           String
  products      Product[]
  subCategories SubCategory[]

  @@map("categories")
}

model SubCategory {
  id         String           @id @default(uuid())
  title      SubCategoryTitle @unique
  products   Product[]
  categories Category[]

  @@map("sub_categories")
}

enum CategoryTitle {
  women
  man
  shoes
  newSeason   @map("new_season")
  sale
  accessories

  @@map("category_title")
}

enum SubCategoryTitle {
  hat
  tShirt @map("t_shirt")
  suit
}

enum ProductType {
  normal
  featured
  trending

  @@map("product_type")
}
